# Specify audio target GUI widgets
faustcode:stiffnessOfResonator=hslider("Stiffness of Resonator", 4200.0, 400.0, 8000.0, 100.0);
faustcode:massOfResonator=hslider("Mass of Resonator", 0.001, 0.0004, 0.008, 0.0002);
faustcode:interactionStiffness=hslider("Touch Interaction Stiffness", 100.0, 50.0, 500.0, 50.0);
faustcode:interactionDamping=hslider("Touch Interaction Damping", 0.03, 0.002, 0.1, 0.002);

# Model itself
mass(massOfResonator,0.0,0.0),m1,(mlabel);
ground(0.0),g,(glabel);
port( ),dev1,(devlabel);
port( ),dev2,(devlabel);

link(stiffnessOfResonator,0.001,0.0),ll,m1,g,(llabel);
touch(interactionStiffness,interactionDamping,0.0),tt,m1,dev1,(tlabel);

audioout,aLeft,m1*(1000.0);
audioout,aRight,m1*(1000.0);
